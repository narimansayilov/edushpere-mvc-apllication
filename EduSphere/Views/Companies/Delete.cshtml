@model EduSphere.Models.Company

@{
    ViewData["Title"] = "Delete company";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm p-4 bg-light">
                <h1 class="text-center mb-4">Delete Company</h1>
                <div class="text-center">
                    <p>Are you sure you want to delete the company <strong>@Model.Name</strong>?</p>
                    <img src="@Model.Logo" alt="@Model.Name" class="border-info rounded-circle mb-3" style="width: 70%" id="ProfilePicturePreview" />
                    <form asp-action="Delete" id="deleteForm" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="button" class="btn btn-danger mr-2" id="confirmDelete">Confirm</button>
                        <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('confirmDelete').addEventListener('click', function () {
            var result = confirm('Are you sure you want to delete the teacher?');
            if (result) {
                document.getElementById('deleteForm').submit();
            }
        });
    </script>
}
<style>
    .rounded-circle {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }
</style>