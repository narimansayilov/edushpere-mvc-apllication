@model IEnumerable<EduSphere.Models.Company>

@{
    ViewData["Title"] = "List of Companies";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-3 mb-4">
                <a href="@Url.Action("Details", "Companies", new { id = item.Id })" class="card-link" style="text-decoration: none; color: inherit;">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="media">
                                <img class="align-self-start mr-3 rounded-circle" src="@item.Logo" alt="@item.Name" style="width: 50px; height: 50px; object-fit: cover;">
                                <div class="media-body">
                                    <h5 class="mt-0">@item.Name</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

@await Html.PartialAsync("_CreateItem", "Companies")

<style>
    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .media {
        display: flex;
        align-items: center;
    }

        .media img {
            border: 2px solid #343a40;
            margin-right: 15px;
        }

    .media-body {
        flex: 1;
    }

        .media-body h5 {
            margin: 0;
            font-size: 1.25rem;
            font-weight: 600;
        }

    .btn-group .btn {
        margin-right: 5px;
    }

        .btn-group .btn:last-child {
            margin-right: 0;
        }
</style>

<!-- Include Bootstrap Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.css" rel="stylesheet">
