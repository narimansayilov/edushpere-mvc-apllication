@model IEnumerable<EduSphere.Models.Course>

@{
    ViewData["Title"] = "List of Courses";
}

<div class="container mt-4">
    @foreach (var chunk in Model.Chunk(4))
    {
        <div class="row">
            @foreach (var item in chunk)
            {
                <div class="col-md-3 mb-4">
                    <a href="@Url.Action("Details", "Courses", new { id = item.Id })" class="card-link" style="text-decoration: none; color: inherit;">
                        <div class="card position-relative" style="border-radius: 10px; overflow: hidden;">
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="border-radius: 10px; height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <div class="category-badge" style="position: absolute; top: 10px; left: 10px; background-color: cadetblue; color: #fff; border-radius: 5px; padding: 2px 5px; font-size: 0.8rem;">
                                    @item.CourseCategory
                                </div>
                                <p class="card-title mb-0" style="font-size: 1.2rem; font-weight: bold; margin-top: 10px;">@item.Name</p>
                                <div class="price-badge" style="position: absolute; width: 60px; height: 50px; top: 0; right: 0; background-color: #007bff; color: #fff; border-top-right-radius: 10px; border-bottom-left-radius: 100%;">
                                    <span style="font-size: 0.9rem; font-weight: bold; position: absolute; top: 15px; right: 5px; transform: translateY(-50%);">@item.Price $</span>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>
@await Html.PartialAsync("_CreateItem", "Courses")

<style>
    .price-badge:hover {
        width: 120px; 
        height: 40px;
        transform: scale(1.1);
    }
</style>
