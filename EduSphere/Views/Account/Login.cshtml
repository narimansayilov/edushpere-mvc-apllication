@using EduSphere.Data.ViewModels;
@model LoginVM;

@{
    ViewData["Title"] = "Log in to your account";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-4">
        <div class="card shadow-lg">
            <div class="card-body">
                <h4 class="card-title text-center">Log in to your account</h4>

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger">
                        <span><b>Sorry!</b> - @TempData["Error"] </span>
                    </div>
                }

                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="EmailAddress" class="control-label"></label>
                        <input asp-for="EmailAddress" class="form-control" />
                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group text-center">
                        <input class="btn btn-success" type="submit" value="Log in" />
                        <a class="btn btn-secondary" asp-controller="Courses" asp-action="Index">Cancel</a>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Sign up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        max-width: 400px;
        margin: auto;
    }

    .btn-success, .btn-secondary {
        margin-top: 20px;
        padding: 0.5rem 1.5rem;
        height: 40px;
        width: 150px;
        font-size: 1rem;
    }
</style>
